{{ define "content" }}
  <div>
    <div class="flex min-h-[60vh] flex-col items-center justify-center px-4 text-center">
      <h1 class="mb-4 text-6xl font-bold">404</h1>
      <p class="mb-6 text-xl">Oops! Looks like this page got lost in time...</p>
      <div class="mb-8">
        <span class="material-symbols-outlined text-5xl"> running_with_errors </span>
      </div>
      <p class="mb-4">The page you're looking for might have been moved, deleted, or perhaps never existed in the first place.</p>
      <a href="/" class="text-blue-600 hover:underline">Take me back to the homepage</a>
    </div>
  </div>
{{ end }}
