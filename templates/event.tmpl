{{template "base" .}}

{{define "title"}}{{.Name}}}}{{end}}
{{define "content"}}
{{$eventName := .Name}}
<div>
    <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">{{$eventName}}</h3>
    <hr class="border-gray-200 dark:border-gray-700 mb-6" />
    <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Results</h3>
    <div class="overflow-x-auto mb-8">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Player</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Result</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Deck</th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            {{range .Results}}
            <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">{{.Name}}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">{{.Result}}</td>
                {{if .Deck}}
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                        {{.Deck}}
                        {{if .Decklist}}
                         - <a href="/decklists/{{.Decklist}}?player={{.Name}}&event={{$eventName}}" class="text-green-600 dark:text-green-400 hover:underline" target="_blank" rel="noopener noreferrer">
                        (decklist)
                        </a>
                        {{end}}
                    </td>
                {{else}}
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400 italic">No deck submitted</td>
                {{end}}
            </tr>
            {{end}}
            </tbody>
        </table>
    </div>
    <hr class="border-gray-200 dark:border-gray-700 mb-6" />
    <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Matches</h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                {{range .Matches}}
                <tr class="even:bg-gray-50 dark:even:bg-gray-700">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">{{.Player1}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">{{.Player2}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">{{.Result}}</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
</div>
{{end}}

