{{template "base" .}}

{{define "title"}}Events{{end}}
{{define "content"}}
<div>
<div class="flex flex-wrap gap-4 mb-6">
{{ range $key, $value := .Stats }}
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 w-48">
        <div class="p-6">
          <h5 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">{{ $key }}</h5>
          <div class="flex items-center gap-4">
            <div class="flex">
              <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">
                {{ $value.Icon }}
              </span>
            </div>
            <div class="flex">
              <p class="text-xl font-bold text-gray-900 dark:text-white">{{ $value.Value }}</p>
            </div>
          </div>
        </div>
    </div>
{{ end }}
</div>
<hr class="border-gray-200 dark:border-gray-700 mb-6" />
{{ $events := .Events }}
<h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Events</h3>
<div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"></th>
            </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            {{ range $event := $events }}
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer" onclick="window.location='{{ $event.URL }}'">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">{{ $event.Date }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">{{ $event.Name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm"><a href="{{ $event.URL }}" class="text-blue-600 dark:text-blue-400 hover:underline">Details</a></td>
                </tr>
            {{ end }}
        </tbody>
    </table>
</div>
</div>
{{end}}
