{{ template "base" . }}

{{ define "title" }}Leaderboards{{ end }}
{{ define "content" }}
  <div class="mb-8 flex items-center justify-between">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Season {{ .Season }}</h2>
    {{ if gt (len .Seasons) 1 }}
      <select onchange="window.location.href=this.value" class="px-4 py-2 rounded bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors">
        {{ range .Seasons }}
          <option value="{{ .URL }}" {{ if eq .Season $.Season }}selected{{ end }}>Season {{ .Season }}</option>
        {{ end }}
      </select>
    {{ end }}
  </div>
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
    {{ range .Leaderboards }}
      <div class="rounded-lg border border-gray-200 bg-white pb-4 shadow dark:border-gray-700 dark:bg-gray-800">
        <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-700">
          <h3 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white">
            {{ .Title }}
          </h3>
        </div>
        <div class="max-h-92 overflow-x-auto overflow-y-auto">
          <table class="min-w-full bg-white dark:bg-gray-800">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th class="{{ $.Scheme.TableHeader }}">Name</th>
                <th class="{{ $.Scheme.TableHeader }}">Score</th>
              </tr>
            </thead>
            <tbody>
              {{ $suffix := .Suffix }}
              {{ $type := .Type }}
              {{ range $index, $entry := .Entries }}
                {{ if ge $index $.ShowCount }}{{ break }}{{ end }}
                <tr class="{{ $.Scheme.TableRowHover }} cursor-pointer" onclick="window.location='{{ $entry.URL }}'">
                  <td class="px-6 py-2 whitespace-nowrap text-gray-900 dark:text-white">
                    {{ add $index 1 }}.
                    {{ $entry.Name }}
                  </td>
                  <td class="px-6 py-2 whitespace-nowrap text-gray-900 dark:text-white">
                    {{ if eq $type "float" }}
                      {{ printf "%.2f" $entry.Score }}
                    {{ else }}
                      {{ $entry.Score }}
                    {{ end }}{{ if $suffix }}{{ $suffix }}{{ end }}
                  </td>
                </tr>
              {{ end }}
            </tbody>
          </table>
        </div>
      </div>
    {{ end }}
  </div>
{{ end }}
