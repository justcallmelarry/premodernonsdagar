{{ template "base" . }}

{{define "title"}}{{ .Player.Name }}{{end}}
{{ define "content" }}
<div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-center text-4xl font-bold text-gray-900 dark:text-white">{{ .Player.Name }}</h1>
    </div>
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 mb-4">
                    <div class="p-6">
                        <table class="min-w-full">
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Elo Rating:</td>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">{{ printf "%.2f" .Player.EloRating }}</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Glicko Rating:</td>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">{{ printf "%.2f" .Player.GlickoRating.Mu }}</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Glicko Distribution:</td>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">{{ printf "%.2f" .Player.GlickoRating.Phi }}</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Glicko Volatility:</td>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">{{ printf "%.2f" .Player.GlickoRating.Sigma }}</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Amount of Draws:</td>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">{{ .Player.DrawCounter }}</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Game Win Rate:</td>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">{{ printf "%.2f" .Player.GameWinRate }}%</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Match Win Rate:</td>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">{{ printf "%.2f" .Player.MatchWinRate }}%</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Events Attended:</td>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">{{ .Player.EventsAttended }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 mb-4">
                    <div class="p-6">
                        <h4 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Matches Won Against</h4>
                        {{ if eq (len .Player.WonAgainst) 0 }}
                            <p class="text-gray-500 dark:text-gray-400">No matches won against any opponent yet.</p>
                        {{ else }}
                        <table class="min-w-full">
                            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                            {{ range $opponent, $count := .Player.WonAgainst }}
                            <tr>
                                <td class="py-2 text-gray-500 dark:text-gray-400">{{ $opponent }}</td>
                                <td class="py-2 text-gray-500 dark:text-gray-400 text-right">{{ $count }}</td>
                            </tr>
                            {{ end }}
                        </table>
                        {{ end }}
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 mb-4">
                <div class="p-6">
                <h4 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Matches Lost Against</h4>
                {{ if eq (len .Player.LostAgainst) 0 }}
                    <p class="text-gray-500 dark:text-gray-400">Undefeated! ðŸ’ª</p>
                {{ else }}
                <table class="min-w-full">
                    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    {{ range $opponent, $count := .Player.LostAgainst }}
                    <tr>
                        <td class="py-2 text-gray-500 dark:text-gray-400">{{ $opponent }}</td>
                        <td class="py-2 text-gray-500 dark:text-gray-400 text-right">{{ $count }}</td>
                    </tr>
                    {{ end }}
                </table>
                {{ end }}
                </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 mb-4">
                    <div class="p-6">
                        <h4 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Events Undefeated</h4>
                        {{ if eq .Player.UndefeatedEvents 0 }}
                        <h4 class="text-gray-500 dark:text-gray-400 text-2xl font-bold">{{ .Player.UndefeatedEvents }}</h4>
                        {{ else }}
                        <h4 class="text-green-600 dark:text-green-400 text-2xl font-bold">{{ .Player.UndefeatedEvents }}</h4>
                        {{ end }}
                    </div>
                </div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 mb-4">
                    <div class="p-6">
                        <h4 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Events Unfinished</h4>
                        {{ if eq .Player.UnfinishedEvents 0 }}
                        <h4 class="text-gray-500 dark:text-gray-400 text-2xl font-bold">{{ .Player.UnfinishedEvents }}</h4>
                        {{ else }}
                        <h4 class="text-red-600 dark:text-red-400 text-2xl font-bold">{{ .Player.UnfinishedEvents }}</h4>
                        {{ end }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ end }}