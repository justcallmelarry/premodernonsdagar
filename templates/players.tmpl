{{template "base" .}}

{{define "title"}}Players{{end}}
{{define "content"}}
<div>
{{ $players := .Players }}
<h3>Players</h3>
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-2">
    {{ range $player := $players }}
    <div class="col">
        <a class="btn btn-primary" style="width: 100%;" href="{{ $player.url }}" role="button">{{ $player.name }}</a>
    </div>
    {{ end }}
</div>
</div>
{{end}}
